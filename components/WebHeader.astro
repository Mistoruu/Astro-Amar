<style lang="scss">
  @import "../styles/config.scss";
  header {
    margin: auto;

    //
    & nav ul {
      display: flex;
      align-items: center;
      justify-content: center;
    }
    & nav ul li.logo {
      background: transparent;
      margin-right: auto;
    }
    & nav ul li.logo img {
      height: 50px;

      @media screen and (max-width: $mobile-screen-size) {
        height: 30px;
      }
    }
    & nav ul li.logo:hover {
      border-color: transparent;
    }
    & nav ul li.contact-button {
      margin-left: auto;
    }
    & nav ul li {
      margin: 20px;
      padding: 15px;

      // Borders
      border: 2px solid transparent;
      border-radius: 5px;
      @media screen and (max-width: $mobile-screen-size) {
        margin: 5px;
        padding: 3px;
      }
    }

    & nav ul li a {
      font-size: 2rem;
      position: relative;
      color: white;
      text-decoration: none;
      @media screen and (max-width: $mobile-screen-size) {
        font-size: 1.2rem;
      }
      &::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -2px;
        width: 0;
        height: 2px;
        background-color: $background-1;
        transition: width 0.3s ease-in-out;
      }

      &:hover::after {
        width: 100%;
      }

      &:hover {
        color: $background-1;
      }
    }
  }

  header nav ul li::marker {
    content: none;
  }
</style>
